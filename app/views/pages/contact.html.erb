
<div class="container mt-5">
  <h2 class="mb-4 text-center">Nous contacter</h2>

  <%= form_with url: contact_path, method: :post, local: true, class: "row g-3 needs-validation" do |f| %>
    <div class="col-md-6">
      <%= f.label :first_name, "PrÃ©nom", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control", required: true %>
    </div>

    <div class="col-md-6">
      <%= f.label :last_name, "Nom", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control", required: true %>
    </div>

    <div class="col-12">
      <%= f.label :email, "Adresse e-mail", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="col-12">
      <%= f.label :message, "Message", class: "form-label" %>
      <%= f.text_area :message, class: "form-control", rows: 5, required: true %>
    </div>

    <div class="col-12 text-center">
      <%= f.submit "Envoyer", class: "btn btn-primary mt-3" %>
    </div>
  <% end %>
</div>
