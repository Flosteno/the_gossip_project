
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <!-- En-tête avec badge -->
      <div class="text-center mb-4">
        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
          <i class="fas fa-user fa-2x"></i>
        </div>
        <h1 class="mt-3 mb-2">Utilisateur n°<span class="badge bg-primary"><%= @user.id %></span></h1>
      </div>

      <!-- Carte principale -->
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="card-title mb-0">
            <i class="fas fa-id-card me-2"></i>Informations de l'auteur
          </h5>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <!-- Prénom -->
            <div class="col-md-6">
              <div class="d-flex align-items-center p-3 bg-light rounded">
                <i class="fas fa-user text-primary me-3"></i>
                <div>
                  <small class="text-muted d-block">Prénom</small>
                  <span class="fw-bold"><%= @user.first_name %></span>
                </div>
              </div>
            </div>

            <!-- Nom -->
            <div class="col-md-6">
              <div class="d-flex align-items-center p-3 bg-light rounded">
                <i class="fas fa-user-tag text-primary me-3"></i>
                <div>
                  <small class="text-muted d-block">Nom de famille</small>
                  <span class="fw-bold"><%= @user.last_name %></span>
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="col-12">
              <div class="d-flex align-items-center justify-content-center p-3 bg-light rounded">
                <i class="fas fa-envelope text-primary me-3"></i>
                <div>
                  <small class="text-muted d-block">Email</small>
                  <span class="fw-bold"><%= @user.email %></span>
                </div>
              </div>
            </div>

            <!-- Age -->
            <div class="col-md-6">
              <div class="d-flex align-items-center p-3 bg-light rounded">
                <i class="fas fa-birthday-cake text-primary me-3"></i>
                <div>
                  <small class="text-muted d-block">Âge</small>
                  <span class="fw-bold"><%= @user.age %> ans</span>
                </div>
              </div>
            </div>

            <!-- Date d'inscription -->
            <div class="col-md-6">
              <div class="d-flex align-items-center p-3 bg-light rounded">
                <i class="fas fa-calendar-alt text-primary me-3"></i>
                <div>
                  <small class="text-muted d-block">Inscrit depuis</small>
                  <span class="fw-bold"><%= @user.created_at.strftime("%d/%m/%Y") %></span>
                </div>
              </div>
            </div>

            <!-- Description -->
            <div class="col-12">
              <div class="p-3 bg-light rounded">
                <div class="d-flex align-items-start">
                  <i class="fas fa-quote-left text-primary me-3 mt-1"></i>
                  <div class="flex-grow-1">
                    <small class="text-muted d-block">Description</small>
                    <span class="fw-bold"><%= @user.description %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Boutons d'action -->
        <div class="card-footer bg-white border-top-0">
          <div class="d-flex gap-2 justify-content-center">
            <%= link_to "Retour", gossips_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>