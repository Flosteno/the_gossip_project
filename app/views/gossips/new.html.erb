
  <% if @gossip.errors.any? %>
    <div class="alert alert-danger">
      <h4>Erreurs :</h4>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  


<div class="container mt-5">
  <h2 class="mb-4 text-center">Ã‰cris-nous ton potin !</h2>


  <%= form_with model: @gossip, local: true, class: "row g-3 needs-validation" do |f| %>
  <div class="col-12">
    <%= f.label :title, "Titre", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= f.label :content, "Potin", class: "form-label" %>
    <%= f.text_area :content, class: "form-control", rows: 5 %>
  </div>

 
  <div class="col-12">
    <%= f.label :tags, "Tags", class: "form-label" %><br>
    <% Tag.all.each do |tag| %>
      <div class="form-check form-check-inline">
        <%= check_box_tag "gossip[tag_ids][]", tag.id, false, id: "tag_#{tag.id}", class: "form-check-input" %>
        <%= label_tag "tag_#{tag.id}", tag.title, class: "form-check-label" %>
      </div>
    <% end %>
  </div>

  <div class="col-12 text-center">
    <%= f.submit "Envoyer", class: "btn btn-primary mt-3" %>
  </div>
<% end %>

</div>
