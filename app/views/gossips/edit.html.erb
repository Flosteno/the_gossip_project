<% if @gossip.errors.any? %>
    <div class="alert alert-danger">
      <h4>Erreurs :</h4>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container mt-5">
  <h2 class="mb-4 text-center">Modifie ton potin !</h2>

  <%= form_with model: @gossip, local: true, class: "row g-3 needs-validation" do |f| %>
    <div class="col-12">
      <%= f.label :title, "Titre", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="col-12">
      <%= f.label :content, "Potin", class: "form-label" %>
      <%= f.text_area :content, class: "form-control", rows: 5 %>
    </div>

    <%= f.hidden_field :user_id, value: 11 %>

    <div class="col-12 text-center">
      <%= f.submit "Envoyer", class: "btn btn-primary mt-3" %>
    </div>
  <% end %>
</div>